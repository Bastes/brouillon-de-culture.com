- content_tag 'div', { :class => "item direction_#{direction.id}" } do
  .name= link_to direction.actual_name, direction.url, :title => direction.actual_description
  .actions
    = admin_area { link_to t(:edit), edit_direction_path(direction) }
    = admin_area { link_to t(:remove), remove_direction_path(direction) }
