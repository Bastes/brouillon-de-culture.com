<% title { t :identification } %>
<% form_tag(url_for(:controller => :sessions, :action => :create)) do -%>
  <div>
    <%= label_tag :login, t(:login) %>
    <%= text_field_tag :login %>
  </div>
  <div>
    <%= label_tag :password, t(:password) %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag t(:log_in) %>
  </div>
<% end -%>
